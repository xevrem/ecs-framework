{
  "name": "ecsf",
  "version": "1.0.9",
  "description": "Entity Component System Framework for JavaScript",
  "source": "src/index.ts",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:clean": "rm -rf dist",
    "build:source": "tsc --build tsconfig.json",
    "build:post": "cp -r src/types dist/.",
    "build": "npm run build:clean;npm run build:source;npm run build:post",
    "check": "tsc --watch --noEmit --pretty -p dev-tsconfig.json",
    "test": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xevrem/ecs-framework.git"
  },
  "author": "Erika V. Jonell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xevrem/ecs-framework/issues"
  },
  "homepage": "https://github.com/xevrem/ecs-framework",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
