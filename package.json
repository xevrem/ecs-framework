{
  "name": "ecsf",
  "version": "1.0.2",
  "description": "Entity Component System Framework for JavaScript",
  "main": "dist/index.js",
  "types": "dist",
  "scripts": {
    "test": "jest --watch",
    "watch": "tsc --watch --noEmit --pretty",
    "build:pre": "rm -rf build;rm -rf dist;mkdir -p build;cp -r src/types build/types",
    "build:source": "esbuild src/index.ts --bundle --sourcemap --platform=browser --outfile=build/index.js",
    "build:types": "tsc --declaration --declarationMap --emitDeclarationOnly",
    "build:post": "rm build/*.test.*;mv build dist",
    "build": "npm run build:pre;npm run build:source;npm run build:types;npm run build:post"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xevrem/ecs-framework.git"
  },
  "author": "Erika V. Jonell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xevrem/ecs-framework/issues"
  },
  "homepage": "https://github.com/xevrem/ecs-framework",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
